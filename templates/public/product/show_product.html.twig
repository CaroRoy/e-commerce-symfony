{% extends "base.html.twig" %}
{% block title %}Produit | Détails{% endblock %}
{% block body %}

    <div class="container pt-5 pb-5 bodyPublicHomePage">
        <div class="row">
            <div class="col-12 pb-3">
                <a href="{{path('public_home')}}" class="btn btn-primary"><i class="fas fa-angle-double-left"></i> Retour</a>
            </div>
        </div>
        <div class="row">
            <div class="col-12 pb-3">
                <h3 class="text-center">Détails produit</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header text-center">
                        <h2>{{product.name}}</h2>
                    </div>
                    <div class="card-body">
                        <div>
                            <p>Catégorie : {{product.category.name}}</p>
                        </div>
                        <div>
                            <p>Description : {{product.description | raw}}</p>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div>
                            <h4>Prix :</h4>
                            <p>{{product.price | amount}}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-12 pb-3">
                <a href="{{path('public_home')}}" class="btn btn-primary"><i class="fas fa-angle-double-left"></i> Retour</a>
            </div>
        </div>
    </div>

{% endblock %}