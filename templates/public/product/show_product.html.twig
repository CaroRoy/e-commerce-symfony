{% extends "base.html.twig" %}

{% block title %}Produit | Détails{% endblock %}

{% block body %}

    <div class="container pt-4 pb-4">
        <div class="row">
            <div class="col-12 col-md-6">
                <div>
                    <img 
                    {% if product.imageUrl is not same as  null %}
                        src="{{product.imageUrl}}" 
                    {% else %}
                        src="{{asset('images/image-default.jpg')}}" 
                    {% endif %}
                    alt="image du produit" class="img-fluid">
                </div>
            </div>
            <div class="col-12 col-md-6">
                <h1>{{product.name}}</h1>
                <p>{{product.price | amount}}</p>
                <a href="{{path('cart_add', {'id': product.id})}}" class="btn btn-primary btn-lg">Ajouter au panier</a>
            </div>

            <div class="col-12 pt-5">
                <h3>Ces produits qui pourraient vous intéresser...</h3>
            </div>
            {% for product in productsAssociate %}
                <div class="col-6 col-md-3 mb-3">
                    {% include "public/shared/_product_card.html.twig" %}
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}